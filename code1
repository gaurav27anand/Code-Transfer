import plotly.graph_objects as go

# Create a bar chart to display successful and failed runs
colors = ['green' if result == 'SUCCESS' else 'red' for result in df['result']]

fig = go.Figure(data=[
    go.Bar(
        x=df['runID'],
        y=df['duration_in_minutes'],
        marker_color=colors,
        text=df['result'],
        hoverinfo='text+y'
    )
])

# Update the layout of the chart
fig.update_layout(
    title='Pipeline Runtime per Run',
    xaxis_title='Run ID',
    yaxis_title='Runtime (minutes)',
    barmode='group'
)

# Display the chart
fig.show()