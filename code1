# Attach the image using MIMEBase for more control
with open("pipeline_runtimes.png", "rb") as file:
    part = MIMEBase('application', 'octet-stream')
    part.set_payload(file.read())
    encoders.encode_base64(part)
    part.add_header('Content-Disposition', 'inline', filename="pipeline_runtimes.png")
    part.add_header('Content-ID', '<pipeline_runtimes>')
    msg.attach(part)
