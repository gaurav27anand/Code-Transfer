pipeline {
    agent any

    stages {
        stage('Example Stage') {
            steps {
                script {
                    try {
                        // Run the command and check the exit status
                        def result = sh(script: 'your-command-here', returnStatus: true)
                        if (result != 0) {
                            // Command failed, send Harmony notification for failure
                            harmonySend message: "Step failed with exit code: ${result}", status: 'FAILED'
                            error("Step failed")  // To make the pipeline step fail
                        } else {
                            // Command succeeded, send Harmony notification for success
                            harmonySend message: "Step succeeded.", status: 'SUCCESS'
                        }
                    } catch (Exception e) {
                        // In case of any unexpected error
                        harmonySend message: "Unexpected error occurred: ${e.message}", status: 'FAILED'
                        throw e
                    }
                }
            }
        }
    }
}
